@model parcelPicUp.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles for " + Model.UserName;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Manage" method="post">
    <input type="hidden" asp-for="UserId" />

    <table class="table">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Is Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>@Model.Roles[i].RoleName</td>
                    <td>
                        <input asp-for="Roles[@i].IsSelected" />
                        <input type="hidden" asp-for="Roles[@i].RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
